# ContainerStacks Environment Configuration

# Application Settings
NODE_ENV=development
PORT=3001
CLIENT_URL=http://localhost:5173
VITE_API_URL=http://localhost:3001/api
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# Branding (Frontend)
# Set the display name shown across the UI
COMPANY-NAME=ContainerStacks
## Alternatively, you can use VITE_COMPANY_NAME
# VITE_COMPANY_NAME=ContainerStacks

# PostgreSQL Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/containerstacks
# For Neon.tech or other cloud PostgreSQL providers, use their connection string:
# DATABASE_URL=postgresql://username:password@ep-example-123456.us-east-1.aws.neon.tech/containerstacks?sslmode=require

# PayPal Configuration
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox

# SMTP2GO Email Configuration
SMTP2GO_API_KEY=your-smtp2go-api-key
SMTP2GO_USERNAME=your-smtp2go-username
SMTP2GO_PASSWORD=your-smtp2go-password
FROM_EMAIL=noreply@containerstacks.com
FROM_NAME=ContainerStacks

# Linode API Configuration
LINODE_API_TOKEN=your-linode-api-token
LINODE_API_URL=https://api.linode.com/v4

# DigitalOcean API Configuration (Optional)
DIGITALOCEAN_API_TOKEN=your-digitalocean-api-token

# Docker Configuration
DOCKER_HOST=unix:///var/run/docker.sock
DOCKER_REGISTRY_URL=registry.containerstacks.com

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Encryption Key for API Keys Storage
ENCRYPTION_KEY=your-32-character-encryption-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Monitoring Configuration
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=your-influxdb-token
INFLUXDB_ORG=containerstacks
INFLUXDB_BUCKET=metrics

# Backup Configuration
BACKUP_STORAGE_PROVIDER=local
BACKUP_RETENTION_DAYS=30